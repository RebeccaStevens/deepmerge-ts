{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "paths": {
      "deepmerge-ts": ["./index"],
      "deepmerge-ts/presets": ["./presets/index"],
    },
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./benchmark/**/*",
    "./dist/**/*",
    "./tests/**/*",
    "./types-legacy/**/*"
  ]
}
